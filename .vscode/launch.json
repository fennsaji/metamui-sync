    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Run main",
        "program": "${workspaceFolder}/app.ts",
        "preLaunchTask": "tsc: build - tsconfig.json",
        "outFiles": ["${workspaceFolder}/bin/**/*.js"]
      },
      {
        "type": "node",
        "request": "launch",
        "name": "Run Validator",
        "program": "${workspaceFolder}/validator.ts",
        "preLaunchTask": "tsc: build - tsconfig.json",
        "outFiles": ["${workspaceFolder}/bin/**/*.js"]
      },
      {
        "type": "node",
        "request": "launch",
        "name": "Run Weights",
        "program": "${workspaceFolder}/weights.ts",
        "preLaunchTask": "tsc: build - tsconfig.json",
        "outFiles": ["${workspaceFolder}/bin/**/*.js"]
      },
    ]
  }